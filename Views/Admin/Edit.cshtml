@model VisaApplicationSystem.Models.Visa

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/CustomCSS/TableView.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
        function validateField(field) {
            var value = field.value.trim();
            var errorSpan = field.parentElement.querySelector(".text-danger");
            if (value === '') {
                errorSpan.innerText = 'This cannot be empty.';
            } else {
                errorSpan.innerText = '';
            }
        }

    </script>
</head>
<style>
    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
    }

    .custom-moved {
        margin-left: 15cm;
    }

    .form-outline {
        position: center;
    }

        .form-outline input,
        .form-outline select,
        .form-outline textarea {
            border: 3px solid #ced4da;
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            width: 100%;
        }

    input[type=text],
    select {
        width: 40%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=number],
    select {
        width: 40%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
</style>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Edit visa</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.visaID)

        <div class="form-group">
            Visa name
            <div class="col-md-10">
                @Html.EditorFor(model => model.visaName, new { htmlAttributes = new { @class = "form-control", @onblur = "validateField(this);", placeholder = "Visa name" } })
                <p id="visaName " class="text-danger"></p>
                @Html.ValidationMessageFor(model => model.visaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p></p>Visa title
            <div class="col-md-10">
                @Html.EditorFor(model => model.visaTitle, new { htmlAttributes = new { @class = "form-control", @onblur = "validateField(this);", placeholder = "Visa title" } })
                <p id="visaTitle" class="text-danger"></p>
                @Html.ValidationMessageFor(model => model.visaTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p></p>Visa description
            <div class="col-md-10">
                @Html.EditorFor(model => model.visaDescription, new { htmlAttributes = new { @class = "form-control", @onblur = "validateField(this);", placeholder = "Description" } })
                <p id="visaDescription" class="text-danger"></p>
                @Html.ValidationMessageFor(model => model.visaDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p></p>Admin ID
            <div class="col-md-10">
                @Html.EditorFor(model => model.adminID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adminID, "", new { @class = "text-danger" })
            </div>
        </div>
        <h4>Supportive Documents</h4>
        @if (Model.personalInformation)
        {


            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="personalInformation" name="personalInformation" value="true" checked>
                <label class="form-check-label" for="personalInformation">Personal Information</label>
            </div>

        }
        else
        {
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="personalInformation" name="personalInformation" value="true">
                <label class="form-check-label" for="personalInformation">Personal Information</label>
            </div>

        }



        @if (Model.PAN)
        {


            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="PAN" name="PAN" value="true" checked>
                <label class="form-check-label" for="PAN">PAN</label>
            </div>

        }
        else
        {
            <div class="form-check form-switch">
