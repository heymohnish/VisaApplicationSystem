                <input class="form-check-input" type="checkbox" id="employeeProof" name="employeeProof" value="true" checked>
                <label class="form-check-label" for="employeeProof">Employee Proof</label>
            </div>

        }
        else
        {
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="employeeProof" name="employeeProof" value="true">
                <label class="form-check-label" for="employeeProof">Employee Proof</label>
            </div>
        }

        @if (Model.educationProof)
        {


            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="educationProof" name="educationProof" value="true" checked>
                <label class="form-check-label" for="educationProof">Education Proof</label>
            </div>

        }
        else
        {
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="educationProof" name="educationProof" value="true">
                <label class="form-check-label" for="educationProof">Education Proof</label>
            </div>

        }
        @if (Model.bankProof)
        {


            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="bankProof" name="bankProof" value="true" checked>
                <label class="form-check-label" for="bankProof">Bank Proof</label>
            </div>
        }
        else
        {
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="bankProof" name="bankProof" value="true">
                <label class="form-check-label" for="bankProof">Bank Proof</label>
            </div>
        }

        @if (Model.toeflCertification)
        {


            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="toeflCertification" name="toeflCertification" value="true" checked>
                <label class="form-check-label" for="toeflCertification">TOEFL Certification</label>
            </div>

        }
        else
        {
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="toeflCertification" name="toeflCertification" value="true">
                <label class="form-check-label" for="toeflCertification">TOEFL Certification</label>
            </div>

        }

        @if (Model.visitorProof)
        {


            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="visitorProof" name="visitorProof" value="true" checked>
                <label class="form-check-label" for="visitorProof">VisitorProof</label>
            </div>
        }
        else
        {
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="visitorProof" name="visitorProof" value="true">
                <label class="form-check-label" for="visitorProof">VisitorProof</label>
            </div>

        }
        <br>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-pri" />
            </div>
        </div>
    </div>
    }
</body>
</html>

