@model VisaApplicationSystem.Models.Visa

@{
    ViewBag.Title = "CreateVisa";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/CustomCSS/TableView.css" rel="stylesheet" />
    <link href="~/Content/CustomCSS/CreateVisa.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/CustomScript/ScriptComonNull.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create Visa</h4>
       

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.visaName, new { htmlAttributes = new { @class = "form-control", @onblur = "validateField(this);", placeholder = "Visa name" } })
                <p id="visaName " class="text-danger"></p>
                @Html.ValidationMessageFor(model => model.visaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.visaTitle, new { htmlAttributes = new { @class = "form-control", @onblur = "validateField(this);", placeholder = "Visa title" } })
                <p id="visaTitle" class="text-danger"></p>
                @Html.ValidationMessageFor(model => model.visaTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.visaDescription, new { htmlAttributes = new { @class = "form-control", @onblur = "validateField(this);", placeholder = "Description" } })
                <p id="visaDescription" class="text-danger"></p>
                @Html.ValidationMessageFor(model => model.visaDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Admin ID
            <div class="col-md-10">
                @Html.EditorFor(model => model.adminID, new { htmlAttributes = new { @class = "form-control", @onblur = "validateField(this);", placeholder = "Admin ID" , @disabled = "disabled" } })
                <p id="adminID" class="text-danger"></p>
                @Html.ValidationMessageFor(model => model.adminID, "", new { @class = "text-danger" })
            </div>
        </div>
        <h3>Supportive Documents</h3>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="personalInformation" name="personalInformation" value="true">
            <label class="form-check-label" for="personalInformation">Personal Information</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="PAN" name="PAN" value="true">
            <label class="form-check-label" for="PAN">PAN</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="aadhar" name="aadhar" value="true">
            <label class="form-check-label" for="aadhar">Aadhar</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="governmentProof" name="governmentProof" value="true">
            <label class="form-check-label" for="governmentProof">PAN</label>
        </div>

        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="photo" name="photo" value="true">
            <label class="form-check-label" for="photo">Photo</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="passport" name="passport" value="true">
            <label class="form-check-label" for="passport">Passport</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="employeeProof" name="employeeProof" value="true">
            <label class="form-check-label" for="employeeProof">Employee Proof</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="educationProof" name="educationProof" value="true">
            <label class="form-check-label" for="educationProof">Education Proof</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="bankProof" name="bankProof" value="true">
            <label class="form-check-label" for="bankProof">Bank Proof</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="toeflCertification" name="toeflCertification" value="true">
            <label class="form-check-label" for="toeflCertification">TOEFL Certification</label>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="visitorProof" name="visitorProof" value="true">
            <label class="form-check-label" for="visitorProof">VisitorProof</label>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</body>
</html>