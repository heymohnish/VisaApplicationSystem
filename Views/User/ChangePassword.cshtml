@model VisaApplicationSystem.Models.Login

@{
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/CustomScript/SignUp.js"></script>
    <link href="~/Content/CustomCSS/TableView.css" rel="stylesheet" />
    <script src="~/Scripts/CustomScript/ChangePassword.js"></script>
    <link href="~/Content/CustomCSS/ChangePassword.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h2>Change password</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @onblur = "validateField(this);", placeholder = "Current password", type = "password" } })
                    <p id="errorrePassword " class="text-danger"></p>
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Check" class="btn btn-pri" />
                </div>
            </div>
        </div>
    }
</body>
</html>