@model IEnumerable<VisaApplicationSystem.Models.ApplicationForm>

@{
    ViewBag.Title = "DraftApplication";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/CustomCSS/TableView.css" rel="stylesheet" />
</head>
<body>
    <h2>Draft Application</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Application ID
                </th>
                <th>
                    Visa name
                </th>
                <th>
                    Visa title
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.applicationID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.visaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.visaTitle)
                </td>

                <td>
                    @Html.ActionLink("Edit", "EditDraft", new { id = item.applicationID }, new { @class = "btn btn-pri" }) |
                    @Html.ActionLink("Delete", "DeleteDraft", new { id = item.applicationID }, new { @class = "btn btn-dan" })
                </td>
            </tr>
        }

    </table>
</body>
</html>