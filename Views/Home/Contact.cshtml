@model VisaApplicationSystem.Models.Contact
<html>
<head>
    <script type="text/javascript">
        function validateField(field) {
            var value = field.value.trim();
            var errorSpan = field.parentElement.querySelector(".text-danger");
            if (value === '') {
                errorSpan.innerText = 'This cannot be empty.';
            } else {
                errorSpan.innerText = '';
            }
        }
    </script>
    <script>
        function onBlurName() {
            var name = document.getElementById("fname").value;
            var inputFieldName = document.getElementById("fname");
            var errorName = document.getElementById("errorName");
            var trimmedStr = name.trim();
            var numbers = name.match(/\d+/);
            var specialChars = name.match(/[!#$%^&*()_+{}\[\]:;<>,.?~\\-=]/);

            if (trimmedStr !== name) {
                errorName.innerHTML = "Name contains spaces.";
                inputFieldName.style.borderColor = "red";
            } else if (name === '') {
                errorName.innerHTML = "Name should be filled.";
                inputFieldName.style.borderColor = "red";
            } else if (specialChars) {
                errorName.innerHTML = "Name contains special characters.";
                inputFieldName.style.borderColor = "red";
            } else {
                // If none of the conditions are met, the input is valid.
                inputFieldName.style.borderColor = "green";
                errorName.innerHTML = "";
                checkNumber(numbers);
            }
            inputFieldName.style.borderWidth = "3px";
        }

    </script>
    <style>
        .allign {
                font-family: Arial, Helvetica, sans-serif;
                background-color: #f2f2f2;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                background-image: url('../../content/image/contactus/pexels-andrea-piacquadio-789822.jpg');
            }

            .contact-container {
                width: 1000px;
                margin: 0 auto;
                background-size: cover;
                background-image: url('../../content/image/contactus/pure-css-animated-background.gif');
                background-repeat: no-repeat;
                background-position: center;
                color: #fff;
                padding: 20px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

            .contact-heading {
                text-align: center;
                color: #333;
            }

            .form-field {
                margin-bottom: 20px;
            }

            .form-label {
                display: block;
                margin-bottom: 5px;
                color: black;
            }

            .form-input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
                color: black;
            }

            .form-textarea {
                resize: vertical;
                min-height: 100px;
            }

            .submit-button {
                background-color: #007BFF;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                font-size: 18px;
            }

                .submit-button:hover {
                    background-color: #0056b3;
                }
        .custom-width {
            width: 3000px;
        }

        .vh-100 {
            height: 100vh; /* Set the height to 100% of the viewport height */
            background-image: url('../../content/image/login.jpg'); /* Specify the URL of your background image */
            background-color: #000000; /* Fallback background color */
            background-size: cover; /* Cover the entire element with the image */
            background-repeat: no-repeat; /* Prevent the image from repeating */
            background-attachment: fixed; /* Fix the background in place */
        }

        .custom-moved {
            margin-left: 15cm;
        }

        .form-outline {
            position: center;
        }

            .form-outline input,
            .form-outline select,
            .form-outline textarea {
                border: 3px solid #ced4da;
                border-radius: 0.25rem;
                padding: 0.375rem 0.75rem;
                font-size: 1rem;
                width: 100%;
            }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .mb-9 {
            margin-bottom: 20px; /* Adjust the value to control the amount of spacing */
        }

        .p-8 {
            margin-bottom: 30px;
            margin-top: 30px;
            margin-left: 30px;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
        }

        .col-md-c {
            margin-left: 170px;
        }
    </style>
</head>
<body>
    <div class="allign">
        <div class="contact-container">
            <h2 class="contact-heading">Contact us</h2>
            <form action="#" method="post">
                <div class="form-field">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-input" type="text" id="name" name="name" required autocomplete="off"
                           onfocus="onFocusName()" onblur="onBlurName()">
                </div>
                <div class="form-field">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-input" type="email" id="email" name="email" required onfocus="onfocusMail()"
                           onblur="onBlurEmail()">
                </div>
                <div class="form-field">
                    <label class="form-label" for="message">Message</label>
                    <textarea class="form-input form-textarea" id="message" name="message" required autocomplete="off"
                              onblur="onBlurMessage(this)" onkeydown="onKeyMessage(this)"></textarea>
                </div>
                <div class="form-field">
                    <input class="submit-button" type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/CustomScript/contactus.js"></script>

</body>

</html>