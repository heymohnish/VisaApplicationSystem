@model VisaApplicationSystem.Models.Contact
<html>
<head>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/CustomScript/ContactusValidation.js"></script>
    <link href="~/Content/CustomCSS/ContactUs.css" rel="stylesheet" />
</head>
<body>
    <div class="allign">
        <div class="contact-container">
            <h2 class="contact-heading">Contact us</h2>
            <form action="#" method="post">
                <div class="form-field">
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <p>@ViewBag.SuccessMessage</p>
                    }
                    <label class="form-label" for="name">Name</label>
                    <input class="form-input" type="text" id="fname" name="name" required autocomplete="off"
                           onblur="onBlurName()">
                    <p id="userNameError" class="text-danger"></p>
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
                <div class="form-field">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-input" type="email" id="email" name="email" required
                           onblur="onBlurEmail()">
                    <p id="errorEmail" class="text-danger"></p>
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
                <div class="form-field">
                    <label class="form-label" for="message">Message</label>
                    <textarea class="form-input form-textarea" id="message" name="message" required autocomplete="off"
                              onblur="onBlurMessage(this)" onkeydown="onKeyMessage(this)"></textarea>
                    <p id="errorMessage" class="text-danger"></p>
                    @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger" })
                </div>
                <div class="form-field">
                    <input class="submit-button" type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>

</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

</html>