<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
<style>
    /* Define a CSS class for the icons */
    .icon {
        margin-right: 8px; /* Adjust the spacing between the icon and text */
    }

    /* Basic styling for the vertical navigation bar */
    .vertical-nav {
        background-color: #adcdff;
        width: 250px; /* Adjust the width as needed */
        height: 100%; /* Adjust the height as needed */
        position: fixed;
        top: 0;
        left: 0;
        overflow-x: hidden;
        padding-top: 20px;
    }

        /* Style for the navigation links */
        .vertical-nav ul {
            list-style-type: none;
            padding: 10px;
            margin: 0;
        }

        .vertical-nav li {
            margin-bottom: 10px;
        }

        .vertical-nav a {
            display: block;
            font-style: normal;
            color: #000000;
            text-decoration: none;
            font-size: 17px;
            padding: 10px;
        }

            .vertical-nav a:hover {
                font-style: normal;
                background-color: #218cff;
                color: #ffffff;
                border-radius: 8px;
                transition: all 0.3s ease-in-out;
            }

    .home-link {
        font-size: 16px;
        color: #007bff;
        text-decoration: none;
    }

    .content {
        margin-left: 270px;
        padding: 20px;
    }
</style>
<body>
    <div class="vertical-nav">
        <a class="navbar-brand" href="@Url.Action("Index", "VCO", new { area = "" })">
            <img src="~/Content/Image/Government_of_India_logo.svg.png" alt="Govenment of india"
                 draggable="false" height="70" width="160" />
        </a>
        <ul>
            <li><a href="@Url.Action("Index", "VCO", new { area = "" })"><i class="fas fa-home icon"></i>Home</a></li>
            <li><a href="@Url.Action("Applications", "VCO", new { area = "" })"><i class="fas fa-user-plus icon"></i>Download application</a></li>
            <li><a href="@Url.Action("Update", "VCO", new { area = "" })"><i class="fas fa-pencil-ruler icon"></i>Update status</a></li>
            <li><a href="@Url.Action("ChangePassword", "VCO", new { area = "" })"><i class="fas fa-user-lock icon"></i>Change password</a></li>
            <li><a href="@Url.Action("Profile", "VCO", new { area = "" })"><i class="fas fa-user icon"></i>@(Session["UserName"] != null ? Session["UserName"].ToString() : "No value")</a></li>
            <li><a href="@Url.Action("SignOut", "VCO", new { area = "" })"><i class="fas fa-sign-out-alt icon"></i>Logout</a></li>
        </ul>
    </div>

    <div class="content">
        @RenderBody()
    </div>
</body>
</html>

