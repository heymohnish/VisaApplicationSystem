<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="~/Content/CustomCSS/LayoutVCO.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/ce19876732.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="vertical-nav">
        <a class="navbar-brand" href="@Url.Action("Index", "VCO", new { area = "" })">
            <img src="~/Content/Image/Government_of_India_logo.svg.png" alt="Govenment of india"
                 draggable="false" height="70" width="160" />
        </a>
        <ul>
            <li><a href="@Url.Action("Index", "VCO", new { area = "" })"><i class="fas fa-home icon"></i>Home</a></li>
            <li><a href="@Url.Action("Applications", "VCO", new { area = "" })"><i class="fas fa-user-plus icon"></i>Download application</a></li>
            <li><a href="@Url.Action("Update", "VCO", new { area = "" })"><i class="fas fa-pencil-ruler icon"></i>Update status</a></li>
            <li><a href="@Url.Action("ChangePassword", "VCO", new { area = "" })"><i class="fas fa-user-lock icon"></i>Change password</a></li>
            <li><a href="@Url.Action("Profile", "VCO", new { area = "" })"><i class="fas fa-user icon"></i>@(Session["UserName"] != null ? Session["UserName"].ToString() : "No value")</a></li>
            <li><a href="@Url.Action("SignOutvco", "VCO", new { area = "" })"><i class="fas fa-sign-out-alt icon"></i>Logout</a></li>
        </ul>
    </div>

    <div class="content">
        @RenderBody()
    </div>
</body>
</html>

@*3) VCO Home Page:
    View all Application-Download
    Status Change
    Communication with User
    Edit profile
    Change VCO Password
    Logout*@