<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://kit.fontawesome.com/ce19876732.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Include Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.10.2/dist/umd/popper.min.js"></script>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    .button {
        background-color: #e7e7e7; /* Green */
        border: none;
        color: white;
        padding: 8px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .button4 {
        background-color: #dbdbdb;
        color: black;
    }
        .button4:hover {
            background-color: #003096;
            color: white;
        }
</style>
<body>
    <nav class="navbar navbar-expand-lg"style="background-color: #dbdbdb">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img id="MDB-logo"
                     src="~/Content/Image/Government_of_India_logo.svg.png" alt="Govenment of india"
                     draggable="false" height="70" width="200"/>
            </a>
            <div>

                <form class="form-inline my-2 my-lg-0" style="text-align: right;">
                    <button type="button" onclick="window.location.href='@Url.Action("Index", "Home", new { area = "" })'" class="button button4 my-2 my-sm-0 mr-3" style="margin-right: 1em;">Home</button>
                    <button type="button" onclick="window.location.href='@Url.Action("About", "Home", new { area = "" })'" class="button button4 my-2 my-sm-0 mr-3" style="margin-right: 1em;">About</button>
                    <button type="button" onclick="window.location.href='@Url.Action("Login", "Login", new { area = "" })'" class="button button4 my-2 my-sm-0 mr-3" style="margin-right: 1em;">Sign in</button>
                    <button type="button" onclick="window.location.href='@Url.Action("Signup", "Login", new { area = "" })'" class="button button4 my-2 my-sm-0 mr-3" style="margin-right: 1em;">Sign up</button>
                    <button type="button" onclick="window.location.href='@Url.Action("Contact", "Home", new { area = "" })'" class="button button4 my-2 my-sm-0 mr-3" style="margin-right: 1em;">Contact us</button>
                </form>

            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
        <hr />

    </div>
    <footer class="text-white text-center text-lg-start" style="background-color: #003975 ">
        <!-- Grid container -->
        <div class="container p-4">
            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                    <h5 class="text-uppercase">INDIAN VISA</h5>
                    <p>
                        <iframe width="500" height="280" src="https://www.youtube.com/embed/hEAp6QU-wbw?si=DV0YzTJV_iMqjeIg" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                    </p>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">


                </div>
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                    <!-- Links -->
                    <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                    <p><i class="fas fa-home me-3"></i> Delhi MG Road, IN</p>
                    <p>
                        <i class="fas fa-envelope me-3"></i>
                        info@example.com
                    </p>
                    <p><i class="fas fa-phone me-3"></i> + 01 234 567 88</p>
                    <p><i class="fas fa-print me-3"></i> + 01 234 567 89</p>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <h6 class="text-uppercase fw-bold mb-4">Map</h6>
                <iframe style="float: right; margin-right: 110px; " width="30%" height="200"
                        frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                        src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=1%20Grafton%20Street,%20Dublin,%20Ireland+(claysys)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                    <a href="https://www.maps.ie/population/"></a>
                </iframe>

            </div>
        </div>
        <div class="text-center p-3" style="background-color: #213244">
            © 2023 Copyright:
            <a class="text-white" href="https://claysys.com/">claysys.com</a>
        </div>
        <!-- Copyright -->
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
