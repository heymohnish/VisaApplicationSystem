<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="https://kit.fontawesome.com/ce19876732.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="~/Content/CustomCSS/UserLayout.css" rel="stylesheet" />
</head>
<script>
    function refreshPage() {
        location.reload();
    }
    window.addEventListener('pageshow', function (event) {
        if (event.persisted) {
        }
    });
</script>
<body>
    <div class="vertical-nav">
        <a class="navbar-brand" href="@Url.Action("UserIndex", "User", new { area = "" })">
            <img src="~/Content/Image/Government_of_India_logo.svg.png" alt="Govenment of india"
                 draggable="false" height="70" width="160" />
        </a>
        <ul>
            <li><a href="@Url.Action("UserIndex", "User", new { area = "" })"><i class="fas fa-home icon"></i>Home</a></li>
            <li><a href="@Url.Action("ApplyVisa", "User", new { area = "" })"><i class="fas fa-user-plus icon"></i>Apply visa</a></li>
            <li><a href="@Url.Action("DraftApplication", "User", new { area = "" })"><i class="fas fa-pencil-ruler icon"></i>Draft</a></li>
            <li><a href="@Url.Action("MyApplication", "User", new { area = "" })"><i class="fas fa-sticky-note icon"></i>My application</a></li>
            <li><a href="@Url.Action("Message", "User", new { area = "" })"><i class="fas fa-envelope-open-text icon"></i>Message</a></li>
            <li><a href="@Url.Action("CheckStatus", "User", new { area = "" })"><i class="fas fa-star icon"></i>Status</a></li>
            <li><a href="@Url.Action("GeneratePDF", "User", new { area = "" })"><i class="fas fa-download icon"></i>Download</a></li>
            <li><a href="@Url.Action("ChangePassword", "User", new { area = "" })"><i class="fas fa-user-lock icon"></i>Change password</a></li>
            <li><a href="@Url.Action("Profile", "User", new { area = "" })"><i class="fas fa-user icon"></i>@(Session["UserName"] != null ? Session["UserName"].ToString() : "No value")</a></li>
            <li><a href="@Url.Action("SignOut", "User", new { area = "" })"><i class="fas fa-sign-out-alt icon"></i>Logout</a></li>
        </ul>
    </div>


    <div class="content">
        @RenderBody()
    </div>
    <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Services</a></li>
        <li><a href="#">Portfolio</a></li>
        <li><a href="#">Contact</a></li>
    </ul>
</body>
</html>

